<%= render 'layouts/header', var: "GROUPS", action: nil, aclink: "New group", path: groups_path, path_to: new_group_path, signout: "yes"%>
<div class="groups">
<% @groups.each do |group| %>
    <div class="group">
      <div class="group-logo">
      <%= image_tag group.icon, class: "img" %>
      </div>
      <div class="group-info">
       <div>
        <%= link_to group.name, activities_home_path(group.id), class: "group-name" %>
        <% @total_amount = 0%>
        <% group.activities.each do |activity|%>
        <%   @total_amount += activity.amount%>
        <% end %>
       </div>
       <div>
         <p class="total">$<%=@total_amount%></p>
       </div>
      </div>
    </div>
<%end%>
</div>

