  <% @group.ordered_activities.each do |activity|%>
  <% if can? :read, activity %>
  <div class="transaction">
    <div class="transaction-info">
      <p class="transaction-id">Transaction â„–: <%= activity.id%></p>
      <p class="transaction-id"><%= activity.name%></p>
