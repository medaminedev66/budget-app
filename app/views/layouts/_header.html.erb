<header class="header">
  <nav>
    <div class="header__backbtn">
      <%= link_to '', path, class: "fas fa-arrow-left fa-lg text-reset text-decoration-none"%>
    </div>
    <p class="text-reset fs-3"><%= var%></p>
    <div class="header__login">
      <% if action != nil %>
        <%= button_to "#{action}" , '', onclick: "this.f.submit();", class:"btn text-reset"%>
      <% else %>
        <%= link_to "#{aclink}" , path_to, class:"btn text-reset"%>
      <%end%>
    </div>
  </nav>
</header>